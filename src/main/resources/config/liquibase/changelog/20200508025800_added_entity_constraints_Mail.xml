<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Mail.
    -->
    <changeSet id="20200508025800-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="associated_journal_id"
                                 baseTableName="mail"
                                 constraintName="fk_mail_associated_journal_id"
                                 referencedColumnNames="id"
                                 referencedTableName="journal"/>

        <addForeignKeyConstraint baseColumnNames="associated_mail_template_id"
                                 baseTableName="mail"
                                 constraintName="fk_mail_associated_mail_template_id"
                                 referencedColumnNames="id"
                                 referencedTableName="mail_templates"/>

    </changeSet>
</databaseChangeLog>
