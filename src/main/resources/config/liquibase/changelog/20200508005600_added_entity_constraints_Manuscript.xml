<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Manuscript.
    -->
    <changeSet id="20200508005600-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="linked_payment_id"
                                 baseTableName="manuscript"
                                 constraintName="fk_manuscript_linked_payment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment"/>

        <addForeignKeyConstraint baseColumnNames="manuscript_journal_acronym_id"
                                 baseTableName="manuscript"
                                 constraintName="fk_manuscript_manuscript_journal_acronym_id"
                                 referencedColumnNames="id"
                                 referencedTableName="journal"/>

        <addForeignKeyConstraint baseColumnNames="manuscript_author_name_id"
                                 baseTableName="manuscript"
                                 constraintName="fk_manuscript_manuscript_author_name_id"
                                 referencedColumnNames="id"
                                 referencedTableName="author"/>

    </changeSet>
</databaseChangeLog>
